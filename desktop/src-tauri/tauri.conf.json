{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RemoteTouch",
  "version": "1.5.8",
  "identifier": "com.remotetouch.app",
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/kazhamshare-cmd/pocket-remote/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDY1QjYwNUUyNjgyN0YzRTQKUldUazh5ZG80Z1cyWmZHL04wcG1SajQvb0lEcUhORFd2bHNMMnlIU3F5QzI2YzJveFNLMjhWdXEK"
    }
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "RemoteTouch",
        "width": 500,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Utility",
    "shortDescription": "Control your PC from your smartphone",
    "longDescription": "RemoteTouch allows you to control your PC remotely from your smartphone. Features include remote keyboard input, mouse control, and screen sharing via secure WebSocket connection.",
    "macOS": {
      "entitlements": "entitlements.plist",
      "minimumSystemVersion": "10.15",
      "frameworks": [],
      "exceptionDomain": null,
      "signingIdentity": null,
      "providerShortName": null,
      "dmg": {
        "background": "dmg-background.png",
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        }
      }
    },
    "windows": {
      "certificateThumbprint": null,
      "timestampUrl": null,
      "wix": null
    }
  }
}
